<Window x:Class="ButtonDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:github="clr-namespace:GitHubControls;assembly=GitHubControls"
        mc:Ignorable="d" Background="#353535"
        Title="Buttons" Height="200" Width="300">
    <Grid>
		<StackPanel Style="{StaticResource BUTTONS}">
			<github:GitHubButton Content="New"/>
			<github:GitHubButton Content="Save Changes"/>
		</StackPanel>
    </Grid>
</Window>
